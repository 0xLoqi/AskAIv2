<local:OverlayWindow
        x:Class="UI.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:markdown="clr-namespace:Markdown.Xaml"
        xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Width="420" Height="260"
        ShowActivated="True"   Focusable="True"
        WindowStyle="None"     AllowsTransparency="True"
        Background="#01000000" Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border Padding="8" Background="#FF171717" CornerRadius="8">
        <Grid>
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Margin="0,0,0,40" MaxHeight="180">
                <ItemsControl Name="MessagesList" ItemsSource="{Binding Messages, RelativeSource={RelativeSource AncestorType=Window}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <md:MarkdownViewer Markdown="{Binding Text}" Margin="16,4,16,4" Foreground="White" FontSize="16"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <ToggleButton x:Name="PinButton"
                          Width="18" Height="18"
                          HorizontalAlignment="Left" VerticalAlignment="Top"
                          Margin="4"
                          IsChecked="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                          Content="ðŸ“Œ"/>
            <!-- Overlay content goes here -->
            <TextBox Name="InputTextBox" VerticalAlignment="Bottom" Margin="0,0,0,4" KeyDown="InputTextBox_KeyDown"/>
        </Grid>
    </Border>
</local:OverlayWindow> 