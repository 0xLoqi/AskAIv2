<local:OverlayWindow
        x:Class="UI.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:markdown="clr-namespace:Markdown.Xaml"
        xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Width="640" MaxWidth="900" SizeToContent="Height"
        ShowActivated="True"   Focusable="True"
        WindowStyle="None"     AllowsTransparency="True"
        Background="#80222222" Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    <local:OverlayWindow.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <!-- Modern Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2979FF"/>
                                <Setter Property="Foreground" Value="#fff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2257A0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Opacity="0.2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#444" CornerRadius="10" HorizontalAlignment="Center"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:OverlayWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <!-- Header bar -->
            <RowDefinition Height="*"/>  <!-- Messages -->
            <RowDefinition Height="Auto"/> <!-- Screenshot chip -->
            <RowDefinition Height="Auto"/> <!-- Chatbar -->
        </Grid.RowDefinitions>
        <!-- Modern Header Bar -->
        <Border Grid.Row="0" Background="#232323" CornerRadius="8,8,0,0" Padding="0,0,0,0" Height="32" MouseLeftButtonDown="HeaderBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="AskAI" Foreground="#fff" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0" Grid.Column="0"/>
                <TextBlock x:Name="SloganText" Grid.Column="1" Foreground="#bbb" FontStyle="Italic" FontSize="13" VerticalAlignment="Center" Margin="16,0,0,0" Text=""/>
            </Grid>
        </Border>
        <!-- Screenshot Preview Chip (if present) -->
        <!-- Removed duplicate ScreenshotChip from Grid.Row=2 -->
        <!-- Message area with fade-out scroll -->
        <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400" Margin="0,0,0,4">
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                <!-- Messages (newest at bottom) -->
                <ItemsControl Name="MessagesList" ItemsSource="{Binding Messages, RelativeSource={RelativeSource AncestorType=Window}}">
                    <ItemsControl.Resources>
                        <DataTemplate x:Key="UserMessageTemplate">
                            <Border CornerRadius="12" Padding="8,2" Margin="48,0,0,8" Background="#2979FF" HorizontalAlignment="Right">
                                <md:MarkdownViewer Markdown="{Binding Text}" Foreground="White" FontSize="16"/>
                            </Border>
                        </DataTemplate>
                        <DataTemplate x:Key="AssistantMessageTemplate">
                            <Border CornerRadius="12" Padding="8,2" Margin="0,0,48,8" Background="#292929" HorizontalAlignment="Left">
                                <md:MarkdownViewer Markdown="{Binding Text}" Foreground="White" FontSize="16"/>
                            </Border>
                        </DataTemplate>
                        <DataTemplate x:Key="SystemMessageTemplate">
                            <Border CornerRadius="12" Padding="8,2" Margin="0,0,48,8" Background="#444" BorderBrush="#FFD700" BorderThickness="1" HorizontalAlignment="Left">
                                <md:MarkdownViewer Markdown="{Binding Text}" Foreground="#FFD700" FontSize="15" FontStyle="Italic"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.Resources>
                    <ItemsControl.ItemTemplateSelector>
                        <local:MessageTemplateSelector 
                            UserTemplate="{StaticResource UserMessageTemplate}"
                            AssistantTemplate="{StaticResource AssistantMessageTemplate}"
                            SystemTemplate="{StaticResource SystemMessageTemplate}"/>
                    </ItemsControl.ItemTemplateSelector>
                </ItemsControl>
            </StackPanel>
            <ScrollViewer.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#00FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0.1"/>
                    <GradientStop Color="#FFFFFFFF" Offset="1.0"/>
                </LinearGradientBrush>
            </ScrollViewer.OpacityMask>
        </ScrollViewer>
        <!-- Single chatbar at the bottom -->
        <Border Grid.Row="3" Background="#232323" CornerRadius="8" Padding="2" Margin="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Screenshot chip -->
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Screenshot Preview Chip (if present) -->
                <Border x:Name="ScreenshotChip" Grid.Column="0" Background="#292929" CornerRadius="12" Padding="4" Margin="0,0,8,0" Visibility="Collapsed" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image x:Name="ScreenshotThumbnail" Width="32" Height="32" Stretch="UniformToFill" Margin="0,0,4,0" Cursor="Hand" MouseLeftButtonUp="ScreenshotThumbnail_Click"/>
                        <Button Content="âœ–" Click="RemoveScreenshotButton_Click" Height="20" Width="20" Background="Transparent" BorderThickness="0" Foreground="#fff" FontSize="14" Margin="0" Padding="0"/>
                    </StackPanel>
                </Border>
                <Grid Grid.Column="1" VerticalAlignment="Center">
                    <TextBox Name="InputTextBox" VerticalAlignment="Center" Margin="0" KeyDown="InputTextBox_KeyDown" Height="32" FontSize="16" Background="#232323" Foreground="White" BorderThickness="0" VerticalContentAlignment="Center"/>
                    <TextBlock x:Name="InputPlaceholder"
                               Text="Got a question? Just Ask!"
                               Foreground="#888"
                               FontSize="16"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"
                               Panel.ZIndex="1"
                               Background="Transparent"/>
                </Grid>
                <Button x:Name="VoiceButton" Grid.Column="2" Style="{StaticResource IconButtonStyle}" Content="&#xE720;" ToolTip="Voice input"/>
                <Button x:Name="CameraButton" Grid.Column="3" Style="{StaticResource IconButtonStyle}" Content="&#xE714;" ToolTip="Screenshot"/>
                <ToggleButton x:Name="PinButton" Grid.Column="4" Width="40" Height="40" Margin="6,0,0,0" ToolTip="Pin overlay" FontFamily="Segoe Fluent Icons" FontSize="22" Content="&#xE718;" IsChecked="{Binding IsPinned, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <ToggleButton x:Name="VoiceReplyToggle" Grid.Column="5" Width="40" Height="40" Margin="6,0,0,0" ToolTip="Voice reply" FontFamily="Segoe Fluent Icons" FontSize="22" Content="&#xE720;" IsChecked="True"/>
            </Grid>
        </Border>
        <!-- Modal overlay for full-size screenshot preview (hidden by default) -->
        <Border x:Name="ScreenshotModal" Background="#CC111111" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="1000" MouseDown="ScreenshotModal_MouseDown" MinWidth="600" MinHeight="500" MaxWidth="1200" MaxHeight="900">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#222" CornerRadius="16" Padding="12" MinWidth="400" MinHeight="300" MaxWidth="900" MaxHeight="700">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#99000000" Opacity="0.7"/>
                </Border.Effect>
                <Image x:Name="ScreenshotModalImage" Stretch="Uniform" MaxWidth="640" MaxHeight="480" MinWidth="320" MinHeight="180"/>
            </Border>
        </Border>
    </Grid>
</local:OverlayWindow> 